{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Alterado de true para false para permitir emissão
    "esModuleInterop": true,
    "module": "commonjs", // Alterado de "esnext" para "commonjs"
    "moduleResolution": "node", // Alterado de "bundler" para "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017",
    "outDir": "dist" // Adicionado para definir o diretório de saída
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/_meta.js",
    "theme.config.jsx",
    "types/**/*.d.ts",
    "bootstrap.ts" // Incluído para garantir que o bootstrap.ts seja compilado
  ],
  "exclude": [
    "node_modules"
  ]
}
